{
  "mcpServers": {
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres", "postgresql://root:secret@localhost:5432/simplebank"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/Users/yuanko/Doc/Code/go/src/simple-bank-v2"]
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@anthropic/claude-code-mcp-fetch"]
    }
  }
}
